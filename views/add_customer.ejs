<%- include layouts/header.ejs %>

        <div id="page-data-header">
        	<p>Registration Form</p>
        </div>
        <div class="page-data">
            <form method="post" action="/customers/add">
                <table cellpadding="11">
                <tr>
                    <td colspan="2">
                    <a class="tooltips" href="#">
                    <input type="text" name="name" id="name"><span>Needed to enter name</span></a>
                    </td>
                 </tr>
                <tr>
                    <td colspan="2"><input type="text" name="email" id="email" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="text" name="phone" id="phone" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="text" name="age" id="age" required></td>
                </tr>
                 <tr>
                    <td colspan="2"><textarea name="address" id="address" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                </tr>
                </table>
            </form>
        </div>
        
<%- include layouts/footer.ejs %>
